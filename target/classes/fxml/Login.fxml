<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.hero.finalsmartstudentportal.controller.LoginController">

    <!-- Title -->
    <Label text="Smart Student Portal"
           style="-fx-font-size:18px; -fx-font-weight: bold;" />

    <!-- Username & Password -->
    <TextField fx:id="txtUsername" promptText="Username"
               prefWidth="200" maxWidth="200" />
    <PasswordField fx:id="txtPassword" promptText="Password"
                   prefWidth="200" maxWidth="200" />

    <!-- Login Button -->
    <Button text="Login" onAction="#handleLogin" prefWidth="100" />

    <!-- Message Label -->
    <Label fx:id="lblMessage" style="-fx-text-fill: red;" />

</VBox>